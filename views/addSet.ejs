<!-- addSet.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Set</title>
    <!-- Include CSS -->
    <link rel="stylesheet" href="/public/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <!-- Navbar -->
    <% include('partials/navbar', { page: '/lego/addSet' }) %>

    <!-- Page content -->
    <div class="container mx-auto p-4">
        <div class="hero bg-base-200 rounded-lg p-6">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Add Set</h1>
                    <p>Add New lego Set To Our Collection!</p>
                </div>
            </div>
        </div>

        <!-- Form -->
        <form action="/lego/addSet" method="POST">

            <div class="grid grid-cols-2 gap-4 md:grid-cols-2 lg:grid-cols-3 gap-y-0">
                <div>
                    <label for="name" class="block text-gray-700 font-medium">Name</label>
                    <input type="text" id="name" name="name" required 
                    class ="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                </div>
                <div>
                    <label for="year" class="block text-gray-700 font-medium">Year</label>
                    <input type="number" id="year" name="year" required 
                    class ="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                </div>
                <div>
                    <label for="num_parts" class="block text-gray-700 font-medium">Number of Parts</label>
                    <input type="number" id="num_parts" name="num_parts" required 
                    class ="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                </div>
                <div>
                    <label for="img_url" class="block text-gray-700 font-medium">Image URL</label>
                    <input type="url" id="img_url" name="img_url" required 
                    class ="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                </div>
                <div>
                    <label for="theme_id" class="block text-gray-700 font-medium">Theme</label>
                    <select id="theme_id" name="theme_id" required 
                    class ="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                        <% themes.forEach(theme => { %>
                        <option value="<%= theme.id %>"><%= theme.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label for="set_num" class="block text-gray-700 font-medium">Set Number</label>
                    <input type="text" id="set_num" name="set_num" required 
                    class ="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </div>
        </form>
    </div>

</body>

</html>
